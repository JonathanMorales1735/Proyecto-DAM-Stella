<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.Stella" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item> <!-- #3c3f41 -->
        <item name="colorPrimaryVariant">#656A6E</item> <!-- #1d1d1d -->
        <item name="colorOnPrimary">@color/black</item> <!-- @color/white -->
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#3c3f41</item> <!-- @color/black -->
        <item name="colorSecondaryVariant">#1d1d1d</item> <!-- #656A6E-->
        <item name="colorOnSecondary">@color/white</item> <!-- #@color/black -->
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorSecondaryVariant</item> <!-- #3c3f41 -->
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.ocher" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/ocher_background</item>
        <item name="colorPrimaryVariant">@color/ocher_background</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/ocher_elements</item>
        <item name="colorSecondaryVariant">@color/ocher_elements</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="TextViewClaro" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">#FF000000</item>
        <item name="android:textSize">16dp</item>
        <item name="android:layout_width">wrap_content</item>
    </style>
    <style name="TextViewClaroClick" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">#5dbbf0</item>
        <item name="android:textSize">16dp</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="DialogAnimationBottom">
        <item name="android:windowEnterAnimation">@anim/slide_in_animation_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_animation_bottom</item>
    </style>

    <style name="DialogAnimationLeft">
        <item name="android:windowEnterAnimation">@anim/slide_in_animation_left</item>
        <item name="android:windowExitAnimation">@anim/slide_out_animation_left</item>
    </style>

    <style name="DialogLeftTheme" parent="Theme.AppCompat.Light.Dialog">
        <!-- Customize your theme here. -->
        <item name="android:statusBarColor">@color/black</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="taskStyle">
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:textColor">#FF000000</item>
        <item name="android:textSize">32dp</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="cardview" parent="CardView">
        <item name="android:backgroundTint">?attr/colorSecondary</item>
        <item name="android:background">?attr/colorSecondary</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginBottom">2dp</item>
    </style>


</resources>