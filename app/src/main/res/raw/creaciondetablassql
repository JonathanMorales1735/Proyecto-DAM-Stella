CREATE TABLE IF NOT EXISTS PENDINGTASKS (id INT NOT NULL, name VARCHAR(60) NOT NULL, description VARCHAR(255), type VARCHAR(30) NOT NULL, notify BOOLEAN NOT NULL, time TIME, primary key(id))
CREATE TABLE IF NOT EXISTS COMPLETEDTASKS (id INT NOT NULL, name VARCHAR(60) NOT NULL, description VARCHAR(255), type VARCHAR(30) NOT NULL, notify BOOLEAN NOT NULL, time TIME, primary key(id))
CREATE TABLE IF NOT EXISTS PREVIOUSRECORDS ( date DATE NOT NULL, study INT, domestic INT, work INT, leisure INT, primary key(date))
CREATE TABLE IF NOT EXISTS WEEKLYTASKS ( id INT NOT NULL, name VARCHAR(60) NOT NULL, description VARCHAR(255), type VARCHAR(30) NOT NULL, notify BOOLEAN NOT NULL, time TIME, monday BOOLEAN, tuesday BOOLEAN, wednesday BOOLEAN, thursday BOOLEAN, friday BOOLEAN, saturday BOOLEAN, sunday BOOLEAN, primary key(id))